{
    "manifest_version": 3,
    "name": "Web Page Decryptor",
    "version": "1.0",
    "description": "Decrypt web pages using custom mappings",
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Web Page Decryptor"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}